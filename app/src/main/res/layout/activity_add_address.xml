<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgbtnBack"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"

                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_arrow"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center"
                android:textSize="@dimen/dimen_15sp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:text="Add Address"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>



        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_15sp"
            android:hint="Name" />

        <EditText
            android:id="@+id/edtFlatno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="@dimen/dimen_15sp"
            android:hint="Flat No. / House No."
            android:layout_marginTop="@dimen/dimen_10dp"
            />

        <EditText
            android:id="@+id/edtHousename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:textSize="@dimen/dimen_15sp"
            android:hint="House / Flat name"
            android:layout_marginTop="@dimen/dimen_10dp"
            />

        <EditText
            android:id="@+id/edtLandMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"

            android:textSize="@dimen/dimen_15sp"
            android:hint="Land mark"
            android:layout_marginTop="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/edtDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"

            android:textSize="@dimen/dimen_15sp"
            android:hint="District"
            android:layout_marginTop="@dimen/dimen_10dp"/>
        <EditText
            android:id="@+id/edtState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"

            android:textSize="@dimen/dimen_15sp"
            android:hint="State"
            android:layout_marginTop="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/edtCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"

            android:textSize="@dimen/dimen_15sp"
            android:hint="Country"
            android:layout_marginTop="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/edtPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="6"

            android:textSize="@dimen/dimen_15sp"
            android:hint="Pin code"
            android:layout_marginTop="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/edtMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="10"
            android:textSize="@dimen/dimen_15sp"
            android:hint="Mobile number"
            android:layout_marginTop="@dimen/dimen_10dp"/>

        <!--<TextView-->
        <!--android:id="@+id/txtTime"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dimen_60dp"-->
        <!--android:layout_marginTop="@dimen/dimen_10dp"-->
        <!--android:ems="10"-->
        <!--android:gravity="center"-->
        <!--android:text="Click here to select delivery time"-->

        <!--android:textSize="@dimen/dimen_15sp" />-->

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="Add" />
    </LinearLayout>

</LinearLayout>
